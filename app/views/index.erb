<div class="player">
  <div class="song__artwork-container">
    <img src="images/cover.jpg" class="song__artwork">

    <div class="song__time">
      <div class="song__time-start">
        0:00
      </div>
      <div class="song__time-progress-container">
        <div class="song__progress-bar">
          <div class="song__progress-indicator" style="width:0%;"></div>
        </div>
      </div>
      <div class="song__time-end">
        0:00
      </div>
    </div>
  </div>

  <div class="player-content">
    <div class="song-title">
    </div>
    <div class="album-title">
      Legend - The Best Of Bob Marley And The Wailers
    </div>
    <div class="album-artist">
      Bob Marley And The Wailers
    </div>
  </div>

  <div class="player-controls">
    <div class="player-controls-frame">
      <a href="#" class="play-prev"></a>
      <a href="#" class="play-button"></a>
      <a href="#" class="play-next"></a>
    </div>
  </div>
</div>

<% content_for :js do %>
  <script src="/javascript/audio-player.js"></script>
<% end %>
